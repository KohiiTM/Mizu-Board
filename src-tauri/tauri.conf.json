{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mizu Board",
  "version": "0.1.0",
  "identifier": "com.screen-annotator.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Mizu Board",
        "width": 400,
        "height": 600,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "fullscreen": false,
        "resizable": true,
        "center": true,
        "skipTaskbar": true,
        "focus": false,
        "visible": true,
        "contentProtected": false,
        "theme": "Light",
        "parent": null,
        "shadow": false,
        "acceptFirstMouse": false,
        "hiddenTitle": true,
        "preventOverflow": true,
        "maximizable": false,
        "minimizable": false,
        "closable": false,
        "backgroundColor": "#00000000",
        "visibleOnAllWorkspaces": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/mizuNotes.ico"
    ]
  }
}
